{
  "name": "dino-islander-server",
  "version": "0.1.0",
  "description": "Production-ready Colyseus server with tile-based world state",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node lib/index.js",
    "dev": "nodemon",
    "dev:tsx": "tsx src/index.ts",
    "clean": "rimraf lib",
    "generate-schema-unity": "npx schema-codegen src/* --csharp --namespace DinoIslander.Infrastructure --output ../client/dino-islander/Assets/Scripts/Infrastructure/Schema/"
  },
  "keywords": [
    "colyseus",
    "multiplayer",
    "game-server",
    "tilebased",
    "typescript"
  ],
  "author": "Dino Islander Team",
  "license": "MIT",
  "dependencies": {
    "@colyseus/playground": "^0.17.10",
    "colyseus": "^0.17.08",
    "uuid": "^13.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.19.33",
    "nodemon": "^3.1.11",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "24.x"
  }
}
